                    <h4 style="color:#007bff">Create An Acount / <%= link_to "Login", loginPage_path,:class=>"btn btn-primary" %></h4>
                    <hr/>    
                    <%= form_with(url: createUser_path, scope: :user, method:'post', :html=>{:class=>'form-horizontal'}, local: true) do |f| %>
                        <% if @user.errors.any? %>
                            <div class="form-group">
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <ul>
                                        <% @user.errors.full_messages.each do |msg| %>
                                        <li><%= msg %></li>
                                        <% end %>
                                    </ul>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            </div>
                        <% end %>
                        <% flash.each do |name, msg| %>
                            <div class="form-group">
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <ul>
                                        <li><%= msg %></li>
                                    </ul>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            </div>
                        <% end %>
                        <div class="form-group">
                            <%= f.label :authorname, "Enter Name" %>
                            <%= f.text_field :authorname, :class=>"form-control", placeholder: "First Name Middle Name Other Names" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :phone, "Enter Phone Number:" %>
                            <%= f.telephone_field :phone, :class =>"form-control", placeholder: "Enter Phone Numbers" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :email, "Enter Email Address:" %>
                            <%= f.email_field :email, :class =>"form-control", placeholder: "Enter Your Email Address" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :contactAdd, "Enter Contact Address:" %>
                            <%= f.text_area :contactAdd, :class =>"form-control", placeholder: "Enter Your Contact Address", size: "24x6" %>
                        </div>
                        
                        <div class="form-group">
                            <%= f.label :password, "Choose A Password: (Atleast Six(6) Size Long)" %>
                            <%= f.password_field :password, :class =>"form-control", placeholder: "Enter Your Password" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :password_confirmation, "Re - Enter Password:" %>
                            <%= f.password_field :password_confirmation, :class =>"form-control", placeholder: "Re - Enter Your Password" %>
                            <p><%=@error%>
                         </div>
                        
                        <div class="form-group">
                            <%= f.submit "Create Account", :class=>"btn btn-primary btn btn-large" %>
                        </div>
